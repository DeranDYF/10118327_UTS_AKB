<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.InfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="INFO" />

    <RelativeLayout
        android:layout_marginVertical="90dp"
        android:layout_marginHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_info_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10118327 _UTS_AKB"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/title_info_fitur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="7dp"
            android:text="aplikasi ini adalah aplikasi catatan harian yang dimana catatan tersebut bisa diambah,diedit,dan dihapus."
            android:layout_below="@id/title_info_app"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/title_info_daftarfitur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_info_fitur"
            android:layout_marginVertical="7dp"
            android:text="mengedit atau menghapus dapat di lakukan dengan cara mengklik note yang sudah di buat sebelumnya."
            android:textSize="15sp" />
        <TextView
            android:id="@+id/title_info_saran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_info_daftarfitur"
            android:layout_marginVertical="7dp"
            android:text="Disarankan menggunakan Dark Mode untuk hasil yang maksimal dan jeals."
            android:textSize="15sp" />

        <TextView
            android:id="@+id/date_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_info_saran"
            android:layout_alignParentEnd="true"
            android:text="V 1.0"
            android:textSize="12sp" />
    </RelativeLayout>

</FrameLayout>